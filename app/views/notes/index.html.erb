<div class="wrapper_with_padding">
  <notes class="clearfix">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <a href="<%= (url_for [note]) %>">
          <div class="note">
            <p class="title">
              <%= note.title   %>
            </p>
            <p class="date">
              <%= time_ago_in_words(note.created_at) %>
            </p>
          </div>
        </a>
      <% end %>
    <% else  %>
      <h2>Add a note</h2>
      <p>It appears you haven't created any yet... Lets fix that. Why don't you create a new note below.</p>
      <button>
        <%= link_to "New Note", new_note_path %>
      </button>
    <% end %>
  </notes>
</div>
